<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DisplayActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/propImg"
                android:layout_width="match_parent"
                android:layout_height="282dp"
                android:layout_marginTop="-20dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="1dp" />

            <TextView
                android:id="@+id/propName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="287dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="108dp"
                tools:layout_editor_absoluteY="479dp" />

            <TextView
                android:id="@+id/propAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="339dp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/bedroom"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textStyle="bold|italic"
                        tools:layout_editor_absoluteX="109dp"
                        tools:layout_editor_absoluteY="395dp" />

                    <TextView
                        android:id="@+id/bathroom"
                        android:layout_width="22dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textStyle="bold|italic"
                        tools:layout_editor_absoluteX="249dp"
                        tools:layout_editor_absoluteY="422dp" />

                    <TextView
                        android:id="@+id/size"
                        android:layout_width="33dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textStyle="bold|italic"
                        tools:layout_editor_absoluteX="109dp"
                        tools:layout_editor_absoluteY="425dp" />


                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/disbed"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/bedroom"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="395dp" />

                    <TextView
                        android:id="@+id/disbathroom"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/bathroom"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:layout_editor_absoluteX="158dp"
                        tools:layout_editor_absoluteY="435dp" />

                    <TextView
                        android:id="@+id/dissize"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/size"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:layout_editor_absoluteX="16dp" />

                </TableRow>

            </TableLayout>


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/furnished"
                        android:layout_width="32dp"
                        android:layout_height="25dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold|italic"
                        tools:layout_editor_absoluteX="336dp"
                        tools:layout_editor_absoluteY="395dp"
                        android:layout_weight="1"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/propDate"
                        android:layout_width="43dp"
                        android:layout_height="29dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold|italic"
                        tools:layout_editor_absoluteX="252dp"
                        tools:layout_editor_absoluteY="474dp" />

                    <TextView
                        android:id="@+id/proptype"
                        android:layout_width="43dp"
                        android:layout_height="29dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold|italic"
                        tools:layout_editor_absoluteX="252dp"
                        tools:layout_editor_absoluteY="474dp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/disfurnished"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/furnished"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:layout_editor_absoluteX="203dp"
                        tools:layout_editor_absoluteY="395dp" />

                    <TextView
                        android:id="@+id/disdatelisted"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/datelisted"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:layout_editor_absoluteX="138dp"
                        tools:layout_editor_absoluteY="489dp" />


                    <TextView
                        android:id="@+id/distype"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/proptype"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:layout_editor_absoluteX="138dp"
                        tools:layout_editor_absoluteY="489dp" />

                </TableRow>


            </TableLayout>


            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/propdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/propdesc"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/propDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="13dp"
                tools:layout_editor_absoluteY="447dp" />

            <FrameLayout
                android:id="@+id/mapShow"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </FrameLayout>


            <!--com.google.android.gms.maps.MapView
                    android:id="@+id/mapViewG"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" /-->


            <Button
                android:id="@+id/buyNow"
                android:layout_width="158dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="30dp"
                android:background="@color/redbutton"
                android:padding="5dp"
                android:text="@string/buynow"
                android:textColor="@color/white"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/disdatelisted"
                app:layout_constraintVertical_bias="1.0" />


        </LinearLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>